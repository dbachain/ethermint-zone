//==============================================================================
// variables

// main colors
mhue = 325
msat = 96%
mlit = 59%
mc = hsl(mhue, msat, mlit)

app-hue = 233

accent = hsl((mhue + app-hue)/2, 96%, 62%)

// backgrounds
app-bg = hsl(app-hue, 36%, 13%)

app-bg-alpha = alpha(app-bg, 92%)
app-bg-hover = hsl(app-hue, 25%, 11%)
app-fg = hsl(app-hue, 33%, 16%)

// text
bright = #fff
txt = hsl(app-hue, 13%, 75%)
dim = hsl(app-hue, 13%, 50%)

// borders
bc = hsl(app-hue, 22%, 23%)

// anchor
link = hsl(app-hue, 96%, 70%)
hover = hsl(app-hue, 96%, 60%)
hover-bg = hsl(app-hue, 30%, 19%)
 
// input
input-bg = transparent
input-bc = hsl(app-hue, 22%, 33%)
input-bc-hover = hsl(app-hue, 22%, 40%)

// typography
x = 16px
px = 0.0625rem
sans = -apple-system, BlinkMacSystemFont, "Segoe UI", "Roboto", "Oxygen", "Ubuntu", "Cantarell", "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif
mono = Consolas, Monaco, monospace

// alerts
alert-success = hsl(120,100%,50%)
alert-info = txt
alert-warning = hsl(60,100%,50%)
alert-danger = hsl(0,100%,50%)

// sizes
width-main = 100%
width-side = 16rem
bw = 3*px

//==============================================================================
// methods

df()
  font-size x
  line-height 1.5
  font-family sans
  color txt

mono()
  font-family Consolas, Monaco, monospace
  font-weight normal

font-label()
  font-size 0.75rem
  white-space nowrap
  text-overflow ellipsis
  overflow hidden
  color bright

shadow()
  box-shadow hsla(0,0,0,0.5) 0 3px 5px

xl = x * 1.5
lg = x * 1.25
m = x
sm = x * 0.75
xs = x * 0.625

h1 = 2rem
h2 = 1.5rem
h3 = 1.25rem
h4 = 1.125rem
h5 = 1rem
h6 = 0.75rem
