@import '../../node_modules/nib/index.styl'
@import './print.styl' print

@require './variables.styl'
@require './vendor/*'

global-reset()
reset-html5()

*
  box-sizing border-box

body
  df()
  background app-bg
  padding-top 3rem
  -webkit-text-size-adjust 100%

a
  color link
  text-decoration none

body, input, button, textarea
  font-size x
  line-height 1.5
  font-family sans

strong
  font-weight 600

em
  font-style italic

@media screen and (min-width: 1024px)
  .ni-page-split-header
    border-right 1px solid bc
  .mobile-only
    display none

.anim-spin
  -webkit-animation: keyframes-spin 2s infinite linear
  animation: keyframes-spin 2s infinite linear

.anim-pulse
  -webkit-animation: keyframes-spin 1s infinite steps(8)
  animation: keyframes-spin 1s infinite steps(8)

@keyframes keyframes-spin
  0%
    -webkit-transform: rotate(0deg)
    transform: rotate(0deg)
  100%
    -webkit-transform: rotate(359deg)
    transform: rotate(359deg)
